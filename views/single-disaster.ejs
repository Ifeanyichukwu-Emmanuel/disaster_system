                    </div>
                        <% if (context.report) { %>
                        <div class="col-lg-4">
                            <div class="portfolio-info">
                                <h3>Disaster Details
                                </h3>
                                <ul>
                                    <li><strong>State</strong>: <%= context.report.state %>
                                    </li>
                                    <li><strong>LGA</strong>: <%= context.report.localGovt %>
                                    </li>
                                    <li><strong>Street</strong>: <%= context.report.address %>
                                    </li>
                                    <li><strong>Disaster Type</strong>: <%= context.report.disaster_typ %></a></li>
                                </ul>
                            </div>
                            <div class="portfolio-description">
                                <h2>Disaster description</h2>
                                <p>
                                    <%= context.report.description %>
                                </p>
                            </div>
                        </div>
                        <% } %>
                    </div>
        
                </div>
        </section>
        <% } %>
        <!-- End Portfolio Details Section -->
